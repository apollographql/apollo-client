{
  "compilerOptions": {
    "composite": true,
    "outDir": ".ignore",
    "target": "esnext",
    "module": "nodenext",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "./**/*.cts", "./**/*.cjs"]
}
