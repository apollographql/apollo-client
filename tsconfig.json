{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["DOM", "ES2023"],
    "types": [
      "jest",
      "node",
      "./src/testing/matchers/index.d.ts",
      "@testing-library/react-render-stream/expect"
    ],
    "jsx": "react",
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "./config/tsconfig.json"
    }
  ]
}
