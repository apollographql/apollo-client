{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "suppressImplicitAnyIndexErrors": true,

    "target": "es5",
    "module": "commonjs"
  }
}
