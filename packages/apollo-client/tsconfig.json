{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "lib",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*.ts"],
  "references": [
    { "path": "../apollo-cache" },
    { "path": "../apollo-cache-inmemory" },
    { "path": "../apollo-utilities" }
  ],
  "exclude": ["benchmark", "lib", "node_modules"]
}
