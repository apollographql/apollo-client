{
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "@mdx-js/typescript-plugin"
      }
    ],
  },
  "include": [
    "**/*.mdx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "mdx": {
    // Enable strict type checking in MDX files.
    "checkMdx": true
  }
}
